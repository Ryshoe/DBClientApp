<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dbclientapp.mainscreen.MainScreen">
   <children>
      <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <tabs>
          <Tab text="Customers">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <VBox spacing="3.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <TableView fx:id="custTable">
                                <columns>
                                  <TableColumn fx:id="custIdCol" prefWidth="75.0" text="Customer ID" />
                                  <TableColumn fx:id="custNameCol" prefWidth="75.0" text="Name" />
                                    <TableColumn fx:id="custAddressCol" prefWidth="75.0" text="Address" />
                                    <TableColumn fx:id="custPostalCol" prefWidth="75.0" text="Postal Code" />
                                    <TableColumn fx:id="custPhoneCol" prefWidth="75.0" text="Phone" />
                                    <TableColumn fx:id="custDivisionCol" prefWidth="75.0" text="Division" />
                                    <TableColumn fx:id="custCountryCol" prefWidth="75.0" text="Country" />
                                </columns>
                              </TableView>
                              <HBox spacing="3.0">
                                 <children>
                                    <Button fx:id="customerAddButton" mnemonicParsing="false" prefWidth="52.0" text="Add" />
                                    <Button fx:id="customerEditButton" mnemonicParsing="false" prefWidth="52.0" text="Edit" />
                                    <Button fx:id="customerDeleteButton" mnemonicParsing="false" prefWidth="52.0" text="Delete" />
                                    <Button fx:id="appointmentAddButton" mnemonicParsing="false" text="Create Appointment">
                                       <HBox.margin>
                                          <Insets left="20.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                                 <padding>
                                    <Insets left="3.0" />
                                 </padding>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="3.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Appointments">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <VBox spacing="3.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <TableView fx:id="apptTable">
                                 <columns>
                                    <TableColumn fx:id="apptIdCol" prefWidth="75.0" text="Appointment ID" />
                                    <TableColumn fx:id="apptTitleCol" prefWidth="75.0" text="Title" />
                                    <TableColumn fx:id="apptDescrCol" prefWidth="75.0" text="Description" />
                                    <TableColumn fx:id="apptLocationCol" prefWidth="75.0" text="Location" />
                                    <TableColumn fx:id="apptContactCol" prefWidth="75.0" text="Contact" />
                                    <TableColumn fx:id="apptTypeCol" prefWidth="75.0" text="Type" />
                                    <TableColumn fx:id="apptStartCol" prefWidth="75.0" text="Start" />
                                    <TableColumn fx:id="apptEndCol" prefWidth="75.0" text="End" />
                                    <TableColumn fx:id="apptCustIdCol" prefWidth="75.0" text="Customer ID" />
                                    <TableColumn fx:id="apptUserIdCol" prefWidth="75.0" text="User ID" />
                                 </columns>
                              </TableView>
                              <HBox spacing="3.0">
                                 <children>
                                    <Button fx:id="appointmentEditButton" mnemonicParsing="false" prefWidth="52.0" text="Edit" />
                                    <Button fx:id="appointmentDeleteButton" mnemonicParsing="false" prefWidth="52.0" text="Delete" />
                                    <Label text="Filter by:">
                                       <padding>
                                          <Insets left="250.0" right="2.0" top="4.0" />
                                       </padding>
                                    </Label>
                                    <RadioButton fx:id="noneRadio" mnemonicParsing="false" selected="true" text="None">
                                       <padding>
                                          <Insets left="3.0" top="4.0" />
                                       </padding>
                                       <toggleGroup>
                                          <ToggleGroup fx:id="toggleGroup" />
                                       </toggleGroup>
                                    </RadioButton>
                                    <RadioButton fx:id="monthRadio" mnemonicParsing="false" text="Month" toggleGroup="$toggleGroup">
                                       <padding>
                                          <Insets left="3.0" top="4.0" />
                                       </padding>
                                    </RadioButton>
                                    <RadioButton fx:id="weekRadio" mnemonicParsing="false" text="Week" toggleGroup="$toggleGroup">
                                       <padding>
                                          <Insets left="3.0" top="4.0" />
                                       </padding>
                                    </RadioButton>
                                 </children>
                                 <padding>
                                    <Insets left="3.0" />
                                 </padding>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="3.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
            <Tab text="Reports">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <VBox spacing="3.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <padding>
                              <Insets bottom="3.0" />
                           </padding>
                           <children>
                              <ToolBar prefHeight="40.0" prefWidth="200.0">
                                <items>
                                    <ComboBox fx:id="reportBox" prefWidth="150.0" />
                                  <Button fx:id="reportRunButton" mnemonicParsing="false" prefWidth="50.0" text="Run" />
                                </items>
                              </ToolBar>
                              <AnchorPane prefHeight="357.0" prefWidth="600.0">
                                 <children>
                                    <TableView fx:id="report1Table" prefHeight="330.0" prefWidth="600.0" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                      <columns>
                                        <TableColumn fx:id="report1MonthColumn" prefWidth="100.0" text="Month" />
                                        <TableColumn fx:id="report1TypeColumn1" prefWidth="125.0" text="De-Briefing" />
                                          <TableColumn fx:id="report1TypeColumn2" prefWidth="125.0" text="Planning Session" />
                                          <TableColumn fx:id="report1TypeColumn3" prefWidth="125.0" text="Team-Building" />
                                          <TableColumn fx:id="report1TypeColumn4" prefWidth="125.0" text="Feedback" />
                                      </columns>
                                    </TableView>
                                    <VBox prefHeight="330.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <children>
                                          <ToolBar visible="false">
                                            <items>
                                                <ComboBox fx:id="report2Box" prefWidth="150.0" />
                                              <Button fx:id="report2OkButton" mnemonicParsing="false" prefWidth="50.0" text="OK" />
                                            </items>
                                          </ToolBar>
                                          <AnchorPane prefHeight="390.0" prefWidth="600.0">
                                             <children>
                                                <TableView fx:id="report2Table" prefHeight="295.0" prefWidth="600.0" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                  <columns>
                                                    <TableColumn fx:id="report2ApptIdCol" prefWidth="75.0" text="Appointment ID" />
                                                    <TableColumn fx:id="report2TitleCol" prefWidth="75.0" text="Title" />
                                                      <TableColumn fx:id="report2TypeCol" prefWidth="75.0" text="Type" />
                                                      <TableColumn fx:id="report2DescrCol" prefWidth="75.0" text="Description" />
                                                      <TableColumn fx:id="report2StartCol" prefWidth="75.0" text="Start" />
                                                      <TableColumn fx:id="report2EndCol" prefWidth="75.0" text="End" />
                                                      <TableColumn fx:id="report2CustIdCol" prefWidth="75.0" text="Customer ID" />
                                                  </columns>
                                                </TableView>
                                             </children>
                                          </AnchorPane>
                                       </children>
                                    </VBox>
                                    <TableView fx:id="report3Table" prefHeight="330.0" prefWidth="600.0" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                      <columns>
                                        <TableColumn fx:id="report3CustIdCol" prefWidth="75.0" text="Customer ID" />
                                        <TableColumn fx:id="report3CustNameCol" prefWidth="75.0" text="Name" />
                                          <TableColumn fx:id="report3LastUpdtByCol" prefWidth="75.0" text="Last Updated By" />
                                      </columns>
                                    </TableView>
                                 </children>
                              </AnchorPane>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
