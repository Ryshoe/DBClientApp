<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dbclientapp.controller.MainScreen">
   <children>
      <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <tabs>
          <Tab text="Customers">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <VBox spacing="3.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <TableView fx:id="customerTable">
                                <columns>
                                  <TableColumn prefWidth="75.0" text="Customer ID" />
                                  <TableColumn prefWidth="75.0" text="Name" />
                                    <TableColumn prefWidth="75.0" text="Address" />
                                    <TableColumn prefWidth="75.0" text="Postal Code" />
                                    <TableColumn prefWidth="75.0" text="Phone" />
                                    <TableColumn prefWidth="75.0" text="Division" />
                                    <TableColumn prefWidth="75.0" text="Country" />
                                </columns>
                              </TableView>
                              <HBox spacing="3.0">
                                 <children>
                                    <Button fx:id="customerAddButton" mnemonicParsing="false" prefWidth="52.0" text="Add" />
                                    <Button fx:id="customerEditButton" mnemonicParsing="false" prefWidth="52.0" text="Edit" />
                                    <Button fx:id="customerDeleteButton" mnemonicParsing="false" prefWidth="52.0" text="Delete" />
                                 </children>
                                 <padding>
                                    <Insets left="3.0" />
                                 </padding>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="3.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Appointments">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0">
                     <children>
                        <VBox spacing="3.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                           <children>
                              <TableView fx:id="appointmentTable">
                                 <columns>
                                    <TableColumn prefWidth="75.0" text="Appointment ID" />
                                    <TableColumn prefWidth="75.0" text="Title" />
                                    <TableColumn prefWidth="75.0" text="Description" />
                                    <TableColumn prefWidth="75.0" text="Location" />
                                    <TableColumn prefWidth="75.0" text="Contact" />
                                    <TableColumn prefWidth="75.0" text="Type" />
                                    <TableColumn prefWidth="75.0" text="Start" />
                                    <TableColumn prefWidth="75.0" text="End" />
                                    <TableColumn prefWidth="75.0" text="Customer ID" />
                                    <TableColumn prefWidth="75.0" text="User ID" />
                                 </columns>
                              </TableView>
                              <HBox spacing="3.0">
                                 <children>
                                    <Button fx:id="appointmentAddButton" mnemonicParsing="false" prefWidth="51.0" text="Add" />
                                    <Button fx:id="appointmentEditButton" mnemonicParsing="false" prefWidth="51.0" text="Edit" />
                                    <Button fx:id="appointmentDeleteButton" mnemonicParsing="false" text="Delete" />
                                 </children>
                                 <padding>
                                    <Insets left="3.0" />
                                 </padding>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="3.0" />
                           </padding>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
